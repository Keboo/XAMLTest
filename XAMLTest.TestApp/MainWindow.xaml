<Window x:Class="XAMLTest.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:testapp="clr-namespace:XAMLTest.TestApp"
        mc:Ignorable="d"
        AutomationProperties.AutomationId="TestAutomationId"
        Title="Test App Window" 
        Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <materialDesign:ColorZone Mode="PrimaryMid">
      <TextBlock Text="Test Header" x:Name="Header" HorizontalAlignment="Center" Margin="0,15"/>
    </materialDesign:ColorZone>
  </Grid>
</Window>
