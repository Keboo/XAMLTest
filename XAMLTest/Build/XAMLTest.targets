<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <XamlTestExtraOutputs>$(MSBuildThisFileDirectory)*.exe</XamlTestExtraOutputs>
    <XamlTestExtraOutputs>$(MSBuildThisFileDirectory)*.json</XamlTestExtraOutputs>
  </PropertyGroup>
  
  <Target Name="CopyXamlTestExtraOutputs" AfterTargets="AfterBuild">
    <Copy SourceFiles="@(XamlTestExtraOutputs)" DestinationFolder="$(TargetDir)" />
  </Target>
</Project>